<Page x:Class="SoccerTradingSystem.Views.top_panel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SoccerTradingSystem.Views"
      mc:Ignorable="d" 
      d:DesignHeight="40" d:DesignWidth="1280"
      Title="top_panel">

    <Grid Background="#455A64">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1124*"/>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="80*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Foreground="White" FontSize="20" Grid.Column="0" VerticalAlignment="Center" FontFamily="./font/#GosmickSans"  Margin="10,0,0,0" Text="Player Trading Management"/>
        <Button Grid.Column="1" Name="option"  Content="Option"/>
        <Button Grid.Column="2" Name="logBtn" Height="40" VerticalAlignment="Bottom"/>
        <Button Grid.Column="3" Name="user_regist" Content="Regist"/>
    </Grid>
</Page>
