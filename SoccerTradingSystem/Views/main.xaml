<Page x:Class="SoccerTradingSystem.Views.main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SoccerTradingSystem.Views"
      mc:Ignorable="d" 
      d:DesignHeight="760" d:DesignWidth="1280"
      Title="Player Trading Management">
    
    <DockPanel Name="dockPanel1">
        <Border DockPanel.Dock="Top">
            <Frame Name="top_frame"></Frame>
        </Border>
        <Border DockPanel.Dock="Left" Width="100" Background="White" BorderThickness="3" BorderBrush="Black" Height="720" VerticalAlignment="Bottom">
            <Button Visibility="Collapsed" Name="userAuthBtn" Content="User Info" HorizontalAlignment="Left" Height="38" Margin="0,53,0,0" VerticalAlignment="Top" Width="87"/>
        </Border>
        <Border Background="White" BorderThickness="0"  BorderBrush="Black">
            <Frame Name="content_frame" Grid.Row="1"/>
        </Border>
    </DockPanel>
</Page>
