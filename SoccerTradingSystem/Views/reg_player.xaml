<Page x:Class="SoccerTradingSystem.Views.reg_player"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SoccerTradingSystem.Views"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="reg_player">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <TextBlock  Grid.Row="0" Grid.Column="0" Text="E-Mail" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
        <TextBlock  Grid.Row="1" Grid.Column="0" Text="Password" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
        <TextBlock  Grid.Row="2" Grid.Column="0" Text="First Name" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
        <TextBlock  Grid.Row="3" Grid.Column="0" Text="Middle Name" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
        <TextBlock  Grid.Row="4" Grid.Column="0" Text="Last Name" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
        <TextBlock  Grid.Row="5" Grid.Column="0" Text="Birth" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
        <TextBlock  Grid.Row="6" Grid.Column="0" Text="Position" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
        <TextBlock  Grid.Row="7" Grid.Column="0" Text="Weight" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
        <TextBlock  Grid.Row="8" Grid.Column="0" Text="Height" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>

        <TextBox Grid.Row="0" Grid.Column="1" Name="emailBox" Margin="0,0,-118,0"></TextBox>
        <PasswordBox Grid.Row="1" Grid.Column="1" Name="passwordBox" Margin="0,0,-118,0"></PasswordBox>
        <TextBox Grid.Row="2" Grid.Column="1" Name="firstnameBox" Margin="0,0,-118,0"></TextBox>
        <TextBox Grid.Row="3" Grid.Column="1" Name="middlenameBox" Margin="0,0,-118,0"></TextBox>
        <TextBox Grid.Row="4" Grid.Column="1" Name="lastnameBox" Margin="0,0,-118,0"></TextBox>
        <TextBox Grid.Row="5" Grid.Column="1" Name="birthBox" Margin="0,0,-118,0"></TextBox>
        <TextBox Grid.Row="6" Grid.Column="1" Name="positionBox" Margin="0,0,-118,0"></TextBox>
        <TextBox Grid.Row="7" Grid.Column="1" Name="weightBox" Margin="0,0,-118,0"></TextBox>
        <TextBox Grid.Row="8" Grid.Column="1" Name="heightBox" Margin="0,0,-118,0"></TextBox>
        <Button Name="resiterBtn" Grid.ColumnSpan="2" Content="Regist" HorizontalAlignment="Left" Margin="34,10,-86,-11" Grid.Row="8" Width="234" Click="resiterBtn_Click"/>
    </Grid>
</Page>
